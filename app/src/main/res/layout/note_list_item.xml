<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="12dp"
    android:background="@drawable/bg_rounded_note_item"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="0.2"
        app:srcCompat="@drawable/note_image_white"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Note" />

        <TextView
            android:id="@+id/textViewCreateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Create Time" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewEdit"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="0.1"
        app:srcCompat="@drawable/edit_image"
        />
    <ImageView
        android:id="@+id/imageViewDelete"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="0.1"
        app:srcCompat="@drawable/delete_image_white"
        />
</LinearLayout>